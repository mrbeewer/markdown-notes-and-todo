@{
    ViewBag.Title = "Home Page";
}

<!-- Necessary Scripts, CSS Links for Markdown Converter -->
@Html.Partial("_MarkdownScriptsLinksPartial")


<div class="jumbotron">
    <p align="center"><img src="/Images/Logo.png" style="width: 40%;"></p>
    <h1>Markdown Manager</h1>
    <p class="lead">
        Markdown Manager is a web based markdown editor with a focus on management through notes and todos.
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Demo - Try it Out!</h2>
        <p>
            Scroll down and give it a try without registering! As a user you can save notes and ToDo for easy access. 
        </p>
        <p><a class="btn btn-primary" href="#headerDemo">Demo Now &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Manage ToDos</h2>
        <p>The cool kids combine their notes with ToDos. Why would you want to change applications when your ToDos are applicable to your notes? Don't do that! Use Markdown Manager!</p>
    </div>
    <div class="col-md-4">
        <h2>Run your code!</h2>
        <p>Easily open code in JSFiddle so you can test code while you are working on your notes!</p>
        <p><a class="btn btn-primary" href="#headerDemo">Demo Now &raquo;</a></p>
    </div>
</div>

<!-- jquery ui script for -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.js"></script>

<!-- A toggle-able JSFiddle POST -->
<div id="toggleDemo">
    @Html.Partial("_SendToJSFiddlePartial")
</div>

<!-- Header with Title -->
@Html.Partial("_HeaderDemo", new ViewDataDictionary { { "title", "Create New Note" } })

<div id="markdownDemo" class="form-horizontal" style="margin: 20px 0 0 0;">
    <!-- Markdown Input / Output Containers using Models -->
    @Html.Partial("_MarkdownDemo")
</div>

<script src="~/Scripts/MarkdownToggleShowHide.js"></script>

<script>
    $(window).on("hashchange", function () {
        window.scrollTo(window.scrollX, window.scrollY - 70);
    });
</script>
